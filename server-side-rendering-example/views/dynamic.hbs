<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Language</th>
            <th>Pages</th>
            <th>Authors</th>
            <th>Genres</th>
        </tr>
    </thead>
    <tbody>
        {{#each books as |book|}}
        <tr>
            <td>{{book.title}}</td>
            <td>{{book.year}}</td>
            <td>{{book.language}}</td>
            <td>{{book.pages}}</td>
            <td>
                <ul>
                    {{#each book.authors as |author|}}
                    <li>{{author.name}}</li>
                    {{/each}}
                </ul>
            </td>
            <td>
                <ul>
                    {{#each book.genres as |genre|}}
                    <li>{{genre.name}}</li>
                    {{/each}}
                </ul>
            </td>
            {{/each}}
        </tr>
    </tbody>
</table>